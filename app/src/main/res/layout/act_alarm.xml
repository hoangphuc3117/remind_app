<?xml version="1.0" encoding="utf-8"?>
<!-- Material You 3.0 - Alarm List Screen -->
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <!-- App Bar with Material 3 style -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_surface"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/alarm_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/md_theme_light_surface"
            app:title="Nhắc nhở"
            app:titleTextColor="@color/md_theme_light_onSurface"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:menu="@menu/menu_alarm_list" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Header Card with stats (optional - can add later) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/alarm_stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/md_theme_light_primaryContainer"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/alarm_stats_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoạt động"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_light_onPrimaryContainer" />

                    <TextView
                        android:id="@+id/alarm_stats_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 nhắc nhở"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_light_onPrimaryContainer" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView for alarms -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alarm_rlv_alarms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="88dp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading State -->
    <RelativeLayout
        android:id="@+id/alarm_loading_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_light_background"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/md_theme_light_primary" />

    </RelativeLayout>

    <!-- Extended FAB with Material 3 -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Thêm nhắc nhở"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:icon="@drawable/fab_add"
        app:iconTint="@color/md_theme_light_onPrimaryContainer"
        app:backgroundTint="@color/md_theme_light_primaryContainer"
        app:cornerRadius="28dp"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>



